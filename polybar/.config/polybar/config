[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#BE4976} %{F-} %percentage_used%% / %total%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}


label-song-maxlen = 25
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "%{F#4C5E9D} %{F-}"
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.cpu-format-underline}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.mem-format-underline}

label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.wifi-format-connected-underline}
label-connected = %essid% %downspeed% - %upspeed%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp0s13f0u1u4
interval = 3.0

format-connected-underline = ${colors.eth-format-connected-underline}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip% %downspeed% - %upspeed%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline =${colors.date-format-underline}

label = %{F#7088a3}%{F-} %time% %date%


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = %{F#2E4674} %{F-} %percentage%%
label-volume-foreground = ${root.foreground}
format-volume-underline = ${colors.format-volume-underline}

label = %percentage:2%%
label-muted = 🔇 muted
label-muted-foreground = ${label-muted-foreground}

bar-volume-width = 10
bar-volume-foreground-0 =${colors.bar-volume-foreground-0}
bar-volume-foreground-1 =${colors.bar-volume-foreground-1}
bar-volume-foreground-2 =${colors.bar-volume-foreground-2}
bar-volume-foreground-3 =${colors.bar-volume-foreground-3}
bar-volume-foreground-4 =${colors.bar-volume-foreground-4}
bar-volume-foreground-5 =${colors.bar-volume-foreground-5}
bar-volume-foreground-6 =${colors.bar-volume-foreground-6}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/battery]
type = internal/battery
